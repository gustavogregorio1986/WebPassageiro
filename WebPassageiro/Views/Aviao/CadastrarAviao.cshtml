@model WebPassageiro.Models.AviaoView

@{
    ViewData["Title"] = "Cadastro de Avião";
}

<div class="container mt-5">
    <div class="card shadow-lg rounded-4 border-0">
        <div class="card-header bg-primary text-white rounded-top-4">
            <h4 class="mb-0">
                <i class="bi bi-person-fill me-2"></i>Cadastro de Avião
            </h4>
        </div>
        <div class="card-body p-4">
            <form asp-action="Salvar" method="post" class="needs-validation" novalidate>
                <div class="mb-3">
                    <label asp-for="Companhia" class="form-label">Companhia de Avião</label>
                    <input asp-for="Companhia" class="form-control rounded-3" placeholder="Digite a companhia" />
                    <span asp-validation-for="Companhia" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Portao" class="form-label">Portão</label>
                    <input asp-for="Portao" class="form-control rounded-3" placeholder="Digite o Portão" />
                    <span asp-validation-for="Portao" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Origem" class="form-label">Origem</label>
                    <input asp-for="Origem" class="form-control rounded-3" placeholder="Digite a origem" />
                    <span asp-validation-for="Origem" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Destino" class="form-label">Origem</label>
                    <input asp-for="Destino" class="form-control rounded-3" placeholder="Digite o destino" />
                    <span asp-validation-for="Destino" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Status" class="form-label">Status</label>
                    <select asp-for="Status" class="form-select rounded-3 shadow-sm">
                        <option disabled selected>Selecione o status</option>
                        <option value="1">Ativo</option>
                        <option value="0">inativo</option>
                    </select>
                    <span asp-validation-for="Status" class="text-danger"></span>
                </div>

                <div class="d-grid">
                    <button type="submit" class="btn btn-success btn-lg rounded-3">
                        <i class="bi bi-send-fill me-2"></i>Enviar
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}